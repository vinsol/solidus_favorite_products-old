<% content_for :page_actions do %>
  <% if can?(:admin, Spree::Product) %>
    <li id="new_product_link">
      <%= Spree.t(:listing_favorite_products_users) %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Favorite Products' } %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @product } %>

<% admin_breadcrumb(Spree.t(:favorite_products, scope: [:admin, :tab])) %>

<%= paginate @users if @user.present? %>

<% if @users.any? %>
  <table class="index" id="listing_favorite_products_users">
    <thead>
      <tr data-hook="admin_products_index_headers">
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.email, edit_admin_user_path(user) %>
          </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_results) %>
  </div>
<% end %>

<%= paginate @users if @user.present? %>
